<section class="bg-gray-300 p-2 rounded">
  <h1 class="font-bold text-xl"><%= list.name %></h1>

  <%= render list.tasks %>
<!-- We are still in board#show. url has to be spesfied, auto one is bad -->
  <%= form_with model: [list, list.tasks.build], url: board_list_tasks_path(@board, list) do |form| %>
    <section class="bg-gray-300 p-2 rounded h-min">
      <%= form.hidden_field :list_id, value: list.id %>
      <%= form.submit "New task +" %>
    </section>
  <% end %>
</section>
