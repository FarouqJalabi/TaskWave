<section class="bg-white px-2 w-64" data-drag-target="draggable" id="task-<%= task.id %>"
         draggable="true"
         data-action="dragstart->drag#dragstart dragover->drag#dragover dragend->drag#dragend dragleave->drag#dragleave drag->drag#drag"
         <%# This is part of js not stimulus  %>
         data-update-path="<%= board_list_task_path(@board.id, list.id, task) %>"
>
  <%# So tailwind will include classes %>
  <%#  bg-comfortable bg-approaching bg-urgent hidden text-white %>
  <div class="<%= task.due_color %> h-5 px-2 rounded-full mt-1.5 mb-[-5px] inline-block text-sm"><%= task.due_date %> </div>
  <h1><%= task.name %> <%= task.place %></h1>
</section>