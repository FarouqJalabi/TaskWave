<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "flex flex-col items-center gap-2" }) do |f| %>
  <h1 class="text-2xl font-bold">Change your password</h1>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">

    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Password (minimum 6)", class: "rounded bg-grey border-0" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "rounded bg-grey border-0" %>
  </div>

  <%= f.submit "Change my password", class: "actions text-white bg-dark px-8 py-2 rounded cursor-pointer" %>

  <%= render "devise/shared/links" %>
<% end %>

